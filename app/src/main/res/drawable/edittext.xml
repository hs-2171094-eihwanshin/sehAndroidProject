<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#22fb7b00"
                android:endColor="#22fb7b00"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#fb7b00" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#22ff7f00"
                android:endColor="#22ff7f00"
                android:angle="90"/>
            <stroke
                android:width="2dp"
                android:color="#ff7f00" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>